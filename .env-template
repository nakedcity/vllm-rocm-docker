# Container Images
VLLM_IMAGE=rocm/vllm:rocm7.0.0_vllm_0.11.2_20251210
OPEN_WEBUI_IMAGE=ghcr.io/open-webui/open-webui:v0.4.5

# Model Configuration
MODEL=Qwen/Qwen2.5-14B-Instruct-AWQ
PORT=9500
QUANTIZATION=auto
DTYPE=auto
MAX_MODEL_LEN=8192

# vLLM Performance
GPU_MEMORY_UTILIZATION=0.55
MAX_NUM_SEQS=64
MAX_NUM_BATCHED_TOKENS=2048
PYTORCH_ALLOC_CONF=expandable_segments:True

# ROCm Stability (Default: RDNA 4 / gfx1201 settings)
# These are often overridden by the --architecture flag in run.sh
IS_GFX1201=1
HSA_OVERRIDE_GFX_VERSION=12.0.1
GPU_ARCHS=gfx1201
HSA_ENABLE_SDMA=0
NCCL_P2P_DISABLE=1
NCCL_IB_DISABLE=1
VLLM_ROCM_USE_AITER=0
VLLM_ROCM_CUSTOM_PAGED_ATTN=0
HIP_FORCE_DEV_KERNARG=1

# vLLM Engine Configuration
VLLM_ENABLE_V1_MULTIPROCESSING=0
VLLM_USE_V1=0
VLLM_ATTENTION_BACKEND=ROCM_ATTN
VLLM_DISTRIBUTED_EXECUTOR_BACKEND=uni
VLLM_USE_TRITON_AWQ=0

# Hardware / Multi-GPU
HIP_VISIBLE_DEVICES=0

# Secrets (Leave empty in template)
HF_TOKEN=

# Open WebUI
OPENAI_API_KEY=unused-key
